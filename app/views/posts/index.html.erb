<div class="col-md-12 col-ms-12">
  <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h6 class="panel-title">
          <div class="raw">
            <div class="col-md-offset-1">
              <%= link_to (image_tag User.find(post.user_id).avatar.url(:tiny)),
              "#{"users/#{post.user_id}"}" %>
              <%= link_to "#{User.find(post.user_id).username}",
              "users/#{post.user_id}" %>
              <br>
            </div>
          </div>
        </h6>
        </div>
        <div class="raw">
          <div class="col-md-offset-1">
            <div class="panel-body">
              <% if post.image? %>
                <%= link_to (image_tag post.image.url(:thumb)), post %>
              <% end %>
              <br>
              <br>
              <p><small><%= truncate(post.content, length:65) %></small></p>
                <% if user_signed_in? %>
                  <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe,
                   edit_post_path(post), class: 'btn btn-default' %>
                  <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe,
                   post_path(post), method: :delete,
                    data: { confirm: "The post will be deleted. Click ok to continue." },
                     class: 'btn btn-default' %>
                <% end %>
                </p>
          </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
