    <div class="col-lg-3 col-md-4 col-xs-6 thumb">

      <h3>Posting us: <%= current_user.username %>, Not you? <%= link_to("Sign out", destroy_user_session_path, :method => :delete) %></h3>


      <%= bootstrap_form_for @post, url: posts_path do |f| %>
        <%= f.file_field :image, as: :file %>
        <%= f.text_field :title %>
        <%= f.text_area :content %>
        <%= f.submit %>
      <% end %>
      <br>
    </div>
