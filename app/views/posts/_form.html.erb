<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Posting us: <%= current_user.username %>, Not you? <%= link_to("Sign out", destroy_user_session_path, :method => :delete) %>
    </h3>
  </div>
  <div class="panel-body">
    <%= bootstrap_form_for @post, url: post_path(@post) do |f| %>
      <%= f.file_field :image, as: :file %>
      <%= f.text_field :title %>
      <%= f.text_area :content %>
      <%= f.submit %>
    <% end %>
    <br>
  </div>
</div>
