<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <%= bootstrap_form_for @post, url: posts_path do |f| %>
        <%= f.file_field :image, as: :file %>
        <%= f.text_field :title %>
        <%= f.text_area :content %>
        <%= f.submit %>
      <% end %>
      <br>
    </div>
  </div>
</div>
