<h1> Create a new post </h1>

<%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
  <h2> <%= pluralize(@post.errors.count, "error") %> stopping you from saving the post </h2>
    <ul> <% @post.errors.full_messages.each do |msg| %> </ul>
      <li> <%= msg %> </li>
      <% end %>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <%= f.submit  "Create Post" %>
<% end %>
